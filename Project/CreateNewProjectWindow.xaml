<Window x:Class="HGEngineHelper.CreateNewProjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HGEngineHelper"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Create New HGEngineHelper Project" Height="180" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="80" />
        </Grid.ColumnDefinitions>
        <TextBlock Text="Project Name:" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" FontWeight="Bold" ></TextBlock>
        <TextBox Name="txtProjectName" Grid.Column="1" Grid.Row="0" Text="New Project" VerticalAlignment="Center"  ></TextBox>
        <TextBlock Text="Project Location:" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
        <TextBox Name="txtProjectLocation" Text="C:\RomHcacks\HGEHelperProjects\" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1"/>
        <Button Name="ButtonOpenProjectDirectoryFolderDialog"  Grid.Row="1" Grid.Column="2" Margin="5" Click="ButtonOpenProjectDirectoryFolderDialog_Click" Width="60" Height="25">
            ...
        </Button>
        <TextBlock Text="HGEngine Folder:" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" FontWeight="Bold"></TextBlock>
        <TextBox Name="txtHgEngineLocation" Text="C:\RomHack\SampleHGECodeBase\hg-engine-main\" VerticalAlignment="Center"  Grid.Row="2" Grid.Column="1"/>
        <Button Name="ButtonOpenHgEngineFolderDialog" Grid.Row="2" Grid.Column="2" Click="ButtonOpenHgEngineFolderDialog_Click" Margin="5" Width="60" Height="25" >
            ...
        </Button>
        <Button Name="ButtonCreateHgeHelperProject" Grid.Row="4" Grid.Column="2" Click="ButtonCreateHgeHelperProject_Click" Margin="5" Width="60"  Height="25">
            Create
        </Button>
    </Grid>
</Window>
