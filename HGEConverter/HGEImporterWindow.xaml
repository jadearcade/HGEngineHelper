<Window x:Class="HGEngineHelper.HGEConverter.HGEImporterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HGEngineHelper.HGEConverter"
        mc:Ignorable="d"
        Title="Import HGEngine Data to Project" Height="150" Width="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition  Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock Name="lblProgressMessage" Grid.Row="1" HorizontalAlignment="Left" Visibility="Collapsed" VerticalAlignment="Center" Text="Converting HGE files to CSV..." />
        <ProgressBar Name="progressBar" Grid.Row="2" HorizontalAlignment="Left" Height="30" Width="300" Value="25" Visibility="Collapsed"/>
        <Button HorizontalAlignment="Left" Name="btnStartImport" Grid.Row="0" Click="btnStartImport_Click" Width="300" >
            Start Import
        </Button>
    </Grid>
</Window>
